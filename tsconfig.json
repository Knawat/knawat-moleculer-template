{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "target": "es2019",
    "outDir": "./build",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
