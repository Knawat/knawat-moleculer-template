{
  "name": "moleculer-knawat-template",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "author": "",
  "engines": {
    "node": ">= 12.x.x"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev:start": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --envfile ./deploy/docker/.env --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "dev": "npm run lint && tsc-watch --onFirstSuccess \"npm run dev:start\"",
    "start": "moleculer-runner --config moleculer.config.js",
    "cli": "moleculer connect TCP",
    "ci": "jest --watch",
    "test": "npm run test:unit && npm run test:integration ",
    "test:unit": "jest unit.spec.ts --coverage",
    "test:integration": "jest integration.spec.ts -- runInBand",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "prettier": "prettier services/*.ts utilities/**/*.ts *.ts --write",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "devDependencies": {
    "@shopify/eslint-plugin": "^39.0.2",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.164",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^12.19.3",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "moleculer-repl": "^0.6.4",
    "openapi-types": "^7.0.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.5",
    "supertest": "^6.0.1",
    "@jest/types": "^26.6.2"
  },
  "dependencies": {
    "@moleculer/lab": "^0.6.0",
    "ioredis": "^4.19.2",
    "lodash": "^4.17.20",
    "moleculer": "^0.14.11",
    "moleculer-db": "^0.8.10",
    "moleculer-db-adapter-mongo": "^0.4.10",
    "moleculer-web": "^0.9.1",
    "mongoose": "^5.10.11"
  }
}
