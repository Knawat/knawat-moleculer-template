{
  "name": "moleculer-knawat-template",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "author": "",
  "engines": {
    "node": ">= 12.x.x"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev:local": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --envfile ./docker/development/.env --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "dev": "npm run lint && tsc-watch --onFirstSuccess \"env $(cat ./docker/development/.env) ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts\"",
    "start": "moleculer-runner",
    "cli": "moleculer connect TCP",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "devDependencies": {
    "@shopify/eslint-plugin": "^39.0.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.161",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.6.2",
    "prettier": "^2.0.5",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.10.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "moleculer": "^0.14.0",
    "moleculer-db": "^0.8.9",
    "moleculer-db-adapter-mongo": "^0.4.10",
    "moleculer-web": "^0.9.0",
    "mongoose": "^5.10.0",
    "openapi-types": "^7.0.1"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
